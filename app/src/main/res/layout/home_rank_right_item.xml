<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_38">

    <!--日涨幅值-->
    <TextView
        android:layout_width="@dimen/dp_88"
        android:layout_height="0dp"
        android:id="@+id/DailyGainsValue"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center"
        android:textColor="@color/black_333"
        android:textSize="@dimen/sp_14"
        android:background="@drawable/gray_side"/>

    <!--周涨幅值-->
    <TextView
        android:layout_width="@dimen/dp_88"
        android:layout_height="0dp"
        android:id="@+id/WeekGainsValue"
        app:layout_constraintLeft_toRightOf="@id/DailyGainsValue"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center"
        android:textColor="@color/black_333"
        android:textSize="@dimen/sp_14"
        android:background="@drawable/gray_side"/>

    <!--月涨幅值-->
    <TextView
        android:layout_width="@dimen/dp_88"
        android:layout_height="0dp"
        android:id="@+id/MonthGainsValue"
        app:layout_constraintLeft_toRightOf="@id/WeekGainsValue"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center"
        android:textColor="@color/black_333"
        android:textSize="@dimen/sp_14"
        android:background="@drawable/gray_side"/>

    <!--季度涨幅值-->
    <TextView
        android:layout_width="@dimen/dp_88"
        android:layout_height="0dp"
        android:id="@+id/QuarterGainsValue"
        app:layout_constraintLeft_toRightOf="@id/MonthGainsValue"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center"
        android:textColor="@color/black_333"
        android:textSize="@dimen/sp_14"
        android:background="@drawable/gray_side"/>

    <!--半年涨幅值-->
    <TextView
        android:layout_width="@dimen/dp_88"
        android:layout_height="0dp"
        android:id="@+id/HalfYearGains"
        app:layout_constraintLeft_toRightOf="@id/QuarterGainsValue"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center"
        android:textColor="@color/black_333"
        android:textSize="@dimen/sp_14"
        android:background="@drawable/gray_side"/>

    <!--年涨幅值-->
    <TextView
        android:layout_width="@dimen/dp_88"
        android:layout_height="0dp"
        android:id="@+id/YearGains"
        app:layout_constraintLeft_toRightOf="@id/HalfYearGains"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center"
        android:textColor="@color/black_333"
        android:textSize="@dimen/sp_14"
        android:background="@drawable/gray_side"/>

    <!--基金规模值-->
    <TextView
        android:layout_width="@dimen/dp_88"
        android:layout_height="0dp"
        android:id="@+id/FundModeValue"
        app:layout_constraintLeft_toRightOf="@id/YearGains"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center"
        android:textColor="@color/black_333"
        android:textSize="@dimen/sp_14"
        android:background="@drawable/gray_side"/>

</androidx.constraintlayout.widget.ConstraintLayout>